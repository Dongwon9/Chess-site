# Server Configuration
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Session
SESSION_SECRET=your-secret-key-here-change-this-in-production
SESSION_COOKIE_NAME=sid

# CORS
CORS_ORIGIN=http://localhost:3000

# Proxy (set to 1 if behind a reverse proxy/load balancer)
TRUST_PROXY=0

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=300

# Redis (for production session store)
# Only used when NODE_ENV=production
# If not set, falls back to MemoryStore in development
REDIS_URL=redis://localhost:6379
# For Redis Cloud or other services:
# REDIS_URL=redis://username:password@host:port
